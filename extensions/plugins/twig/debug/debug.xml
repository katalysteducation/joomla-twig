	<description>PLG_TWIG_DEBUG_DESC</description>
	<files>
		<folder>language</folder>
		<filename plugin="debug">debug.php</filename>
		<filename>debug.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="mode"
					type="list"
					label="PLG_TWIG_DEBUG_PARAM_MODE"
					description="PLG_TWIG_DEBUG_PARAM_MODE_DESC"
					default="auto"
					>
					<option value="auto">PLG_TWIG_DEBUG_PARAM_MODE_OPTION_AUTO</option>
					<option value="always">PLG_TWIG_DEBUG_PARAM_MODE_OPTION_ALWAYS</option>
					<option value="never">PLG_TWIG_DEBUG_PARAM_MODE_OPTION_NEVER</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
