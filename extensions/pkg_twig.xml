		<file type="plugin" id="jarray" group="twig" enabled="true">plugins/twig/jarray</file>
		<file type="plugin" id="japp" group="twig" enabled="true">plugins/twig/japp</file>
		<file type="plugin" id="jdoc" group="twig" enabled="true">plugins/twig/jdoc</file>
		<file type="plugin" id="jhtml" group="twig" enabled="true">plugins/twig/jhtml</file>
		<file type="plugin" id="jlang" group="twig" enabled="true">plugins/twig/jlang</file>
		<file type="plugin" id="jlayout" group="twig" enabled="true">plugins/twig/jlayout</file>
		<file type="plugin" id="jmodule" group="twig" enabled="true">plugins/twig/jmodule</file>
